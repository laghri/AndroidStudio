<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical"
    android:background="#000"
    android:weightSum="11">
    <TextView
        android:id="@+id/tvsecs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFF"
        android:layout_weight="1"
        android:text=""
        android:paddingTop="30dp"
        android:textColor="#f6f6f6"
        android:gravity="bottom"
        android:padding="10dp"
        android:textSize="30sp"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        >

    </TextView>
    <TextView
        android:id="@+id/tvmains"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fff"
        android:gravity="bottom"
        android:text=""
        android:textColor="#fff"
        android:padding="10dp"
        android:textSize="50sp"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        >

    </TextView>

    <LinearLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"

        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bacs"
                        android:text="AC"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bcs"
                        android:text="C"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bbrac1s"
                        android:text="("
                        android:textSize="30sp"
                        android:textColor="#ffa500"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bbrac2s"
                        android:text=")"
                        android:textSize="30sp"
                        android:textColor="#ffa500"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b7s"
                        android:text="7"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b8s"
                        android:text="8"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b9s"
                        android:text="9"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bmods"
                        android:text="×"
                        android:layout_weight="1"
                        android:textColor="#ffa500"
                        android:textSize="30sp"
                        android:background="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b4s"
                        android:text="4"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b5s"
                        android:text="5"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b6s"
                        android:text="6"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bminuss"
                        android:text="-"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#ffa500"
                        android:background="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b1s"
                        android:text="1"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b2s"
                        android:text="2"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b3s"
                        android:text="3"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bpluss"
                        android:text="+"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#ffa500"
                        android:background="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bpis"
                        android:text="π"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b0s"
                        android:text="0"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bdots"
                        android:text="."
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:background="#000"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bequals"
                        android:text="="
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#ffa500"
                        android:background="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>